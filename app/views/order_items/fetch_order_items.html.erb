<h1>Order Details </h1>
<h3><%= link_to "Home Page", homes_path	%></h3>
<table border="2" style="width:100%;padding:10px;">
  <tr>
    <th>Id</th>
    <th>product</th>
    <th>quantity</th>
    <th>price</th>
    <th>Status</th>
    <th>Seller</th>
    <th>Review</th>
  </tr>
  <tbody> 
    <% @order_items.each do |order_item| %>
      <tr style="text-align:center">
        <td><%= order_item.id %></td>
        <td><%=link_to order_item.product.name, product_path(id: order_item.product.id) %></td>
        <td><%= order_item.quantity %></td>
        <td><%= order_item.price %></td>
        <td><%= order_item.status %></td>
        <td><%= order_item.product.user.name %></td>
        <%if order_item.status == "delivered"%>
          <td><%= link_to "Add Review", new_review_path(product_id: order_item.product.id, order_id: order_item.order.id)%></td>
        <% else %>
          <td>----</td>
        <% end %>
      </tr>
    <%end%>
  </tbody>
</table>