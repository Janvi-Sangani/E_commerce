<h1>Order Details </h1>
<h3><%= link_to "Home Page", admin_homes_path	%></h3>
<table border="2" style="width:100%;padding:10px;">
  <tr>
    <th>Id</th>
    <th>product</th>
    <th>quantity</th>
    <th>price</th>
    <th>Status</th>
    <th>Seller</th>
    <th>Update</th>
  </tr>
  <tbody>
    <% @order_items.each do |order_item| %>
      <tr style="text-align:center">
        <td><%= order_item.id %></td>
        <td><%=link_to order_item.product.name, admin_product_path(id: order_item.product.id) %></td>
        <td><%= order_item.quantity %></td>
        <td><%= order_item.price %></td>
        <td><%= order_item.status %></td>
        <td><%= order_item.product.user.name %></td>
        <%if order_item.status == "deliverd" %>
          <td> ---- </td>
        <% else %>
           <td><%= link_to "Edit Status", edit_admin_order_item_path(order_item.id), class: "btn btn-success btn-block", data: { turbo_frame: "remote_modal" } %></td>
        <% end %>
      </tr>
    <%end%>
  </tbody>
</table>